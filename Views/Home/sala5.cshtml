<section class="salaLinterna">
  <main>
    <form action='@Url.Action("verificarAcertijo","Home")' method="post">
      <input type="hidden" name="Verif" value="LKAhfjagyeuiahb" />
      <input type="text" name="palabra" />
      <button type="submit" class="comenzar">
        Enviar Respuesta
      </button>
    </form>

    <section>
      <h1>
        Vidas: @ViewBag.vidas<br />
        @ViewBag.nombreJugador
      </h1>

     
      <div id="uv-light"></div>
    </section>
  </main>

  <style>
    #uv-light {
      position: fixed;
      pointer-events: none;
      width: 200%;
      height: 200%;
      background: url('/img/hoyoLuz.png') no-repeat center center;
      background-size: cover;
      transform: translate(-50%, -50%);
      z-index: 9999;
    }
  </style>

  <script>
    const uvLight = document.getElementById('uv-light');

    document.addEventListener('mousemove', function (e) {
      uvLight.style.left = `${e.clientX}px`;
      uvLight.style.top = `${e.clientY}px`;
    });
  </script>
</section>